<div class = "added__items">
  <%= image_tag('tranq_home.png', id: "tranq") %>

  <!-- Magic -->
  <!-- settings: light switch -->
  <div class="magic">
    <div class ="magic__item__switch <%= "d-none" if @tranq.tucked_in %>" id="toggle-day">
        <div class="toggle-img" style="background-image: url('<%= image_path("button_switch_day.png") %>')" ></div>
    </div>
    <div class ="magic__item__switch <%= "d-none" unless @tranq.tucked_in %>" id="toggle-night" >
        <div class="toggle-img" style="background-image: url('<%= image_path("button_switch_night.png") %>')"></div>
    </div>
